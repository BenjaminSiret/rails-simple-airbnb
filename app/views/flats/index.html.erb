<div class="container">
     <h1>All our flats(4)</h1>
  <div class="container d-flex">
    <% @flats.each do |flat| %>
    <div>
      <div class="card" style="height: 200px" >
        <div class="card-body">
          <h5 class="card-title"><%= flat.name %></h5>
          <p class="card-text"><%= flat.address %></p>
          <p><%= link_to 'More Info', flat_path(flat), class: "btn btn-primary" %></p>
        </div>
      </div>
    </div>
    <% end %>
</div>
</div>
